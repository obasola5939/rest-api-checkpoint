# config/.env

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/user_management_db

# OR MongoDB Atlas (uncomment and update with your credentials)
# MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/user_management_db?retryWrites=true&w=majority

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Security (for future enhancements)
# JWT_SECRET=your_jwt_secret_key_here
# CORS_ORIGIN=http://localhost:3000

# Rate Limiting (for future enhancements)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
